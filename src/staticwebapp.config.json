{
    "auth": {
        "identityProviders": {
            "customOpenIdConnectProviders": {
                "devInplaceSSO": {
                    "registration": {
                        "clientIdSettingName": "MY_PROVIDER_CLIENT_ID",
                        "clientCredential": {
                            "clientSecretSettingName": "MY_PROVIDER_CLIENT_SECRET_APP_SETTING_NAME"
                        },
                        "openIdConnectConfiguration": {
                            "wellKnownOpenIdConfiguration": "https://signon.dev.quantumit.net/.well-known/openid-configuration"
                        }
                    },
                    "login": {
                        "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier",
                        "scopes": [
                            "openid",
                            "profile",
                            "email"
                        ],
                        "loginParameterNames": []
                    }
                },
                "inplaceSSO": {
                    "registration": {
                        "clientIdSettingName": "PROD_CLIENT_ID",
                        "clientCredential": {
                            "clientSecretSettingName": "PROD_CLIENT_SECRET"
                        },
                        "openIdConnectConfiguration": {
                            "wellKnownOpenIdConfiguration": "https://auth-au.inplacesoftware.com/.well-known/openid-configuration"
                        }
                    },
                    "login": {
                        "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier",
                        "scopes": [
                            "openid",
                            "profile",
                            "email"
                        ],
                        "loginParameterNames": []
                    }
                }
            }
        }
    },
    "routes": [
        {
            "route": "/",
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/login",
            "serve": "/login.html"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/.auth/login/dev",
			"redirect": "/.auth/login/devInplaceSSO?post_login_redirect_uri=.referrer",
            "statusCode": 302
        },
        {
            "route": "/.auth/login/prod",
			"redirect": "/.auth/login/inplaceSSO?post_login_redirect_uri=.referrer",
            "statusCode": 302
        }
    ],
    "responseOverrides": {
        "401": {
            "redirect": "/.auth/login/devInplaceSSO?post_login_redirect_uri=.referrer",
            "statusCode": 302
        }
    }
}
